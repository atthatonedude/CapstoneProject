<Window x:Class="CapstoneProject.View.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapstoneProject.View"
        mc:Ignorable="d"
        Title="UserLogin" Height="300" Width="400">
    <Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <Label Content="Username:" Width="80" VerticalAlignment="Center" HorizontalContentAlignment="Right" Margin="0,0,8,0"/>
                <TextBox Name="userTb"  Width="180" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <Label Content="Password:" Width="80" VerticalAlignment="Center" HorizontalContentAlignment="Right" Margin="0,0,8,0"/>
                <PasswordBox Name="passwordPb" Width="180" Height="30"/>
            </StackPanel>
            <!-- Todo: figure out how to bind button to viewModel not codebehind-->
            <Button Name="btnLogin" Content="Login" Width="60" Command="{Binding LoginCommand }"/>
            
        </StackPanel>
    </Grid>
</Window>
